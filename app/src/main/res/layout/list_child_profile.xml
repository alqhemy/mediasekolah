<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearAccountProfileItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        style="@style/CardView"
        >
        <LinearLayout
            android:id="@+id/linearAccountParentList"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/top_down_margin"
            android:layout_marginEnd="@dimen/top_down_margin"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvAccounProfileSchool"
            android:layout_marginTop="@dimen/top_down_margin"
            android:layout_marginBottom="@dimen/top_down_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/top_down_margin"
            android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvAccounProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:text="Name" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_delete_black_24dp" />

        </LinearLayout>
        <TextView
            android:id="@+id/tvAccounProfileNip"
            android:layout_marginTop="@dimen/top_down_margin"
            android:layout_marginBottom="@dimen/top_down_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>