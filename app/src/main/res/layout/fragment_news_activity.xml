<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/top_down_margin"
    android:paddingStart="@dimen/top_down_margin">


    <LinearLayout
        android:id="@+id/linearNewsActivityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_down_margin"
        android:orientation="horizontal">
        <TextView
            android:paddingBottom="@dimen/parent_match"
            android:textSize="@dimen/head_title1"
            android:textColor="@color/authui_colorPrimary"
            android:id="@+id/etNewsActivityAnak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearActivityInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <ListView
        android:id="@+id/listNewsActivityUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
