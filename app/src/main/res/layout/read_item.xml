<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/top_down_margin"
        android:layout_marginTop="@dimen/top_down_margin"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/top_down_margin"
            android:layout_marginEnd="@dimen/top_down_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNewsActivitasTitle"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/top_down_margin"
                android:layout_marginTop="@dimen/top_down_margin"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvNewsActivitasDescription"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/top_down_margin"
                android:layout_marginTop="@dimen/top_down_margin"
                android:text="TextView" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
